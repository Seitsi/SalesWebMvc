@model SalesWebMvc.Models.Login

<div class="row justify-content-center">
    <div class="col-md-4 text-center mt-5 mb-3">
        @if (TempData["Erro"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Erro"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="Logar">
            <div class="form-group">
                <label asp-for="Email" class="form-control-plaintext">Email:</label>
                <input asp-for="Email" class="form-control" style="max-width: 350px;" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordHash" class="form-control-plaintext">Senha:</label>
                <input asp-for="PasswordHash" class="form-control" style="max-width: 350px;" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class=" mt-3">
                <input type="submit" value="Entrar" class="btn btn-success btn-block custom-btn-size" />
            </div>
        </form>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-4 text-center mt-1 mb-3">
            <a asp-action="CriarLogin" class="btn btn-success btn-block custom-btn-size">Cadastrar Novo Usuário</a>
        </div>
    </div>
</div>

<style>
    .custom-btn-size {
        width: 100%;
        max-width: 300px;
    }
</style>

@if (TempData["Sucesso"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" style="position: fixed; top: 20px; right: 20px; z-index: 1000;">
        @TempData["Sucesso"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
