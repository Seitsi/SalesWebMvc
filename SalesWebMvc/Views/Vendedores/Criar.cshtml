@model SalesWebMvc.Models.Vendedor
@{
    ViewData["Title"] = "Criar Novo Vendedor";
}

<h2>@ViewData["Title"]</h2>

<h4>Vendedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div class="form-group">
                <label asp-for="Nome" class="form-control-plaintext">Nome:</label>
                <input asp-for="Nome" class="form-control"></input>
            </div>
            <div class="form-group">               
                <label asp-for="Email" class="form-control-plaintext">Email:</label>
                <input asp-for="Email" class="form-control"></input>              
            </div>
            <div class="form-group">              
                <label asp-for="DataNascimento" class="form-control-plaintext">Data de Nascimento:</label>
                <input asp-for="DataNascimento" class="form-control"></input>               
            </div>
            <div class="form-group">               
                <label asp-for="SalarioBase" class="form-control-plaintext">Salário Base:</label>
                <input asp-for="SalarioBase" class="form-control"></input>
            </div>   
            <div class="form-group mt-3">
                <input type="submit" value="Cadastrar" class="btn btn-success"></input>
            </div>
        </form>
    </div>
</div>

